// Delete Confirmation Popup
$C = "../../Common.ui";
$C.@PageOverlay {
  Group {
    LayoutMode: Top;
    Background: (Color: #1a2332);
    Anchor: (Width: 400, Height: 200);

    // Header
    Group #Header {
      LayoutMode: Left;
      Background: (Color: #0f1621);
      Anchor: (Height: 45);
      Padding: (Horizontal: 15, Vertical: 8);

      Label {
        FlexWeight: 1;
        Text: "Confirmation";
        Style: (FontSize: 14, TextColor: #ef4444, RenderBold: true, VerticalAlignment: Center);
      }

      TextButton #CloseBtn {
        Anchor: (Width: 32, Height: 32);
        Text: "X";
        Style: (
          Default: (Background: (Color: #ef4444), LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Hovered: (Background: (Color: #f87171), LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Pressed: (Background: (Color: #dc2626), LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
        );
      }
    }

    // Content
    Group #Content {
      LayoutMode: Top;
      FlexWeight: 1;
      Background: (Color: #0a0f17);
      Padding: (Full: 20);

      Label {
        Anchor: (Height: 30);
        Text: "Voulez-vous vraiment supprimer";
        Style: (FontSize: 14, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center);
      }

      Label #KeyLabel {
        Anchor: (Height: 30);
        Text: "cette entree ?";
        Style: (FontSize: 13, TextColor: #ffd700, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
      }

      Label {
        Anchor: (Height: 25);
        Text: "Cette action est irreversible.";
        Style: (FontSize: 11, TextColor: #808080, HorizontalAlignment: Center, VerticalAlignment: Center);
      }
    }

    // Footer with buttons
    Group #Footer {
      LayoutMode: Left;
      Background: (Color: #0f1621);
      Anchor: (Height: 55);
      Padding: (Horizontal: 15, Vertical: 10);

      Group { FlexWeight: 1; }

      TextButton #CancelBtn {
        Anchor: (Width: 120, Height: 35);
        Text: "Annuler";
        Style: (
          Default: (Background: (Color: #475569), LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Hovered: (Background: (Color: #64748b), LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Pressed: (Background: (Color: #334155), LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
        );
      }

      Group { Anchor: (Width: 20); }

      TextButton #ConfirmBtn {
        Anchor: (Width: 120, Height: 35);
        Text: "Supprimer";
        Style: (
          Default: (Background: (Color: #ef4444), LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Hovered: (Background: (Color: #f87171), LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Pressed: (Background: (Color: #dc2626), LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
        );
      }

      Group { FlexWeight: 1; }
    }
  }
}
