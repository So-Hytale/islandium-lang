// ColorPicker Popup
$C = "../../Common.ui";
$C.@PageOverlay {
  Group {
    LayoutMode: Top;
    Background: (Color: #1a2332);
    Anchor: (Width: 400, Height: 450);

    // Header
    Group #Header {
      LayoutMode: Left;
      Background: (Color: #0f1621);
      Anchor: (Height: 45);
      Padding: (Horizontal: 15, Vertical: 8);

      Label {
        FlexWeight: 1;
        Text: "Choisir une couleur";
        Style: (FontSize: 14, TextColor: #ffd700, RenderBold: true, VerticalAlignment: Center);
      }

      TextButton #CloseBtn {
        Anchor: (Width: 32, Height: 32);
        Text: "X";
        Style: (
          Default: (Background: (Color: #ef4444), LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Hovered: (Background: (Color: #f87171), LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Pressed: (Background: (Color: #dc2626), LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
        );
      }
    }

    // Color Grid
    Group #ColorGrid {
      LayoutMode: Top;
      FlexWeight: 1;
      Padding: (Full: 15);
      Background: (Color: #0a0f17);

      // Row 1 - Rouges
      Group {
        LayoutMode: Left;
        Anchor: (Height: 38);
        Padding: (Bottom: 5);
        Button #C0 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #fecaca); }
        Button #C1 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #fca5a5); }
        Button #C2 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #f87171); }
        Button #C3 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #ef4444); }
        Button #C4 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #dc2626); }
        Button #C5 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #b91c1c); }
        Button #C6 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #991b1b); }
        Button #C7 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #7f1d1d); }
      }

      // Row 2 - Oranges/Jaunes
      Group {
        LayoutMode: Left;
        Anchor: (Height: 38);
        Padding: (Bottom: 5);
        Button #C8 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #fed7aa); }
        Button #C9 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #fdba74); }
        Button #C10 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #fb923c); }
        Button #C11 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #f97316); }
        Button #C12 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #fde047); }
        Button #C13 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #facc15); }
        Button #C14 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #eab308); }
        Button #C15 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #ca8a04); }
      }

      // Row 3 - Verts
      Group {
        LayoutMode: Left;
        Anchor: (Height: 38);
        Padding: (Bottom: 5);
        Button #C16 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #bbf7d0); }
        Button #C17 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #86efac); }
        Button #C18 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #4ade80); }
        Button #C19 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #22c55e); }
        Button #C20 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #16a34a); }
        Button #C21 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #15803d); }
        Button #C22 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #166534); }
        Button #C23 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #14532d); }
      }

      // Row 4 - Cyans/Bleus
      Group {
        LayoutMode: Left;
        Anchor: (Height: 38);
        Padding: (Bottom: 5);
        Button #C24 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #a5f3fc); }
        Button #C25 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #67e8f9); }
        Button #C26 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #22d3ee); }
        Button #C27 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #06b6d4); }
        Button #C28 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #93c5fd); }
        Button #C29 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #60a5fa); }
        Button #C30 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #3b82f6); }
        Button #C31 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #2563eb); }
      }

      // Row 5 - Violets/Roses
      Group {
        LayoutMode: Left;
        Anchor: (Height: 38);
        Padding: (Bottom: 5);
        Button #C32 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #e9d5ff); }
        Button #C33 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #d8b4fe); }
        Button #C34 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #c084fc); }
        Button #C35 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #a855f7); }
        Button #C36 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #f5d0fe); }
        Button #C37 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #f0abfc); }
        Button #C38 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #e879f9); }
        Button #C39 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #d946ef); }
      }

      // Row 6 - Gris/Neutres
      Group {
        LayoutMode: Left;
        Anchor: (Height: 38);
        Padding: (Bottom: 5);
        Button #C40 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #ffffff); }
        Button #C41 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #e5e5e5); }
        Button #C42 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #a3a3a3); }
        Button #C43 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #737373); }
        Button #C44 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #525252); }
        Button #C45 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #404040); }
        Button #C46 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #262626); }
        Button #C47 { Anchor: (Width: 38, Height: 32, Right: 6); Background: (Color: #000000); }
      }

      Group { Anchor: (Height: 15); }

      // Custom HEX input
      Group #CustomColor {
        LayoutMode: Left;
        Anchor: (Height: 45);

        Label {
          Anchor: (Width: 100);
          Text: "Code HEX:";
          Style: (FontSize: 12, TextColor: #808080, RenderBold: true, VerticalAlignment: Center);
        }

        TextField #HexInput {
          Background: (Color: #151d28);
          Anchor: (Width: 120, Height: 36);
          PlaceholderText: "#ffffff";
          Style: (FontSize: 14, TextColor: #ffffff);
        }

        Group { Anchor: (Width: 10); }

        Group #ColorPreview {
          Anchor: (Width: 36, Height: 36);
          Background: (Color: #ffffff);
        }

        Group { FlexWeight: 1; }

        TextButton #ApplyCustomBtn {
          Anchor: (Width: 80, Height: 36);
          Text: "Appliquer";
          Style: (
            Default: (Background: (Color: #22c55e), LabelStyle: (FontSize: 11, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: (Color: #4ade80), LabelStyle: (FontSize: 11, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Pressed: (Background: (Color: #16a34a), LabelStyle: (FontSize: 11, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
          );
        }
      }
    }

    // Footer avec couleur selectionnee
    Group #Footer {
      LayoutMode: Left;
      Background: (Color: #0f1621);
      Anchor: (Height: 55);
      Padding: (Horizontal: 15, Vertical: 10);

      Label {
        Anchor: (Width: 80);
        Text: "Selection:";
        Style: (FontSize: 12, TextColor: #808080, VerticalAlignment: Center);
      }

      Group #SelectedPreview {
        Anchor: (Width: 40, Height: 35);
        Background: (Color: #ffffff);
      }

      Group { Anchor: (Width: 10); }

      Label #SelectedHex {
        Anchor: (Width: 80);
        Text: "#ffffff";
        Style: (FontSize: 13, TextColor: #ffffff, RenderBold: true, VerticalAlignment: Center);
      }

      Group { FlexWeight: 1; }

      TextButton #CancelBtn {
        Anchor: (Width: 80, Height: 35);
        Text: "Annuler";
        Style: (
          Default: (Background: (Color: #475569), LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Hovered: (Background: (Color: #64748b), LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Pressed: (Background: (Color: #334155), LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
        );
      }

      Group { Anchor: (Width: 10); }

      TextButton #SelectBtn {
        Anchor: (Width: 100, Height: 35);
        Text: "Selectionner";
        Style: (
          Default: (Background: (Color: #22c55e), LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Hovered: (Background: (Color: #4ade80), LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
          Pressed: (Background: (Color: #16a34a), LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
        );
      }
    }
  }
}
